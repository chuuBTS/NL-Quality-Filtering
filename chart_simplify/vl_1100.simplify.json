{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "mark": "area",
    "encoding": {
        "x": {
            "timeUnit": "year",
            "field": "Time",
            "type": "quantitative"
        },
        "y": {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative"
        },
        "color": {
            "field": "Source",
            "type": "nominal"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/observatory/main/ECO2.DATA.C1.csv"
    },
    "height": 280,
