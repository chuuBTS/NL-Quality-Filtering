{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Value",
            "type": "quantitative",
            "aggregate": "sum"
        },
        "y": {
            "field": "Country",
            "type": "nominal",
            "sort": "-x"
        },
        "color": {
            "field": "Medal Type",
            "type": "nominal"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/issylavenstein/issylavenstein.github.io/main/data_medals.csv"
    },
    "height": 200,
    "width": 300
}