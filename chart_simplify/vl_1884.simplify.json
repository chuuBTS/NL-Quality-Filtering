{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "mark": "line",
    "encoding": {
        "x": {
            "field": "year_week",
            "type": "nominal"
        },
        "y": {
            "field": "weekly_count",
            "type": "quantitative"
        },
        "color": {
            "field": "country",
            "type": "nominal"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/observatory/main/covidGlobalCases.csv"
    },
    "transform": [
        {
            "filter": {
                "field": "country",
                "oneOf": [
                    "United Kingdom",
                    "France",
                    "Germany",
                    "India"
                ]
            }
        },
        {
            "filter": {
                "field": "indicator",
                "oneOf": [
                    "cases"
                ]
            }
        }
    ],
    "height": 400,
    "width": 600
}