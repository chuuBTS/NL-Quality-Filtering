{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "mark": "bar",
    "encoding": {
        "x": {
            "timeUnit": "year",
            "field": "Year",
            "type": "quantitative"
        },
        "y": {
            "aggregate": "sum",
            "field": "Amount (2020 USD million)",
            "type": "quantitative"
        },
        "color": {
            "field": "Category",
            "type": "nominal"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/Ben25Walker/Ben25Walker.github.io/main/Investment.csv"
    },
    "height": 200,
    "width": 300
}